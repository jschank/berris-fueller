<% title @vehicle.name %>

<% content_for :navigation do %>
	<li><%= link_to 'Edit', edit_vehicle_path(@vehicle) %></li>
	<li><%= link_to 'Back', vehicles_path %></li>
<% end %>
<p>
  <b>Make:</b>
  <%=h @vehicle.make %>
</p>

<p>
  <b>Model:</b>
  <%=h @vehicle.model %>
</p>

<p>
  <b>Year:</b>
  <%=h @vehicle.year %>
</p>

<p>
  <b>Original Miles:</b>
  <%=h @vehicle.miles %>
</p>
<p>
  <b>Current Miles:</b>
  <%= @vehicle.current_miles %>
</p>



