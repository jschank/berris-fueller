<% title @vehicle.name %>

<% content_for :navigation do %>
	<li><%= link_to 'Edit', edit_vehicle_path(@vehicle) %></li>
	<li><%= link_to 'Import Fill Ups', import_fill_ups_path(@vehicle) %></li>
	<li><%= link_to 'Back', vehicles_path %></li>
<% end %>

<div style="float:left">
<p>
  <b>Make:</b>
  <%=h @vehicle.make %>
</p>

<p>
  <b>Model:</b>
  <%=h @vehicle.model %>
</p>

<p>
  <b>Year:</b>
  <%=h @vehicle.year %>
</p>

<p>
  <b>Original Miles:</b>
  <%=h @vehicle.miles %>
</p>
</div>

<% if @vehicle.current_miles != @vehicle.miles %>
<div style="float:right">
	<p>
		<b>Overall MPG</b>
		<%= "%.1f" % @vehicle.overall_miles_per_gallon %>
	</p>

	<p>
		<b>Total Fuel Used:</b>
		<%= @vehicle.total_gallons %> gal.
	</p>

	<p>
		<b>Total Fuel Cost:</b>
		<%= @vehicle.total_fuel_cost %>
	</p>

	<p>
	  <b>Total Miles:</b>
	  <%= @vehicle.current_miles %>
	</p>
</div>
<br clear="all" />
<hr />
<p>
	<b>Savings over hypothetical 25 MPG vehicle:</b>
	<%= @vehicle.savings_vs_hypothetcial_mpg(25) %>
</p>
<hr />
<% end %>

<%= render :partial => 'vehicle_fill_up', :locals => {:fill_ups => @vehicle.fill_ups, :vehicle => @vehicle  } %>




