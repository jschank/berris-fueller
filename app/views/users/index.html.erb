<% title "Users" %>

<% content_for :navigation do %>
	<li><%= link_to 'New User', new_user_path %></li>
<% end %>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Login</th>
    <th>E-mail</th>
    <th>Status</th>
    <th>Admin</th>
		<th>Actions</th>
  </tr>
<% for user in @users %>
  <tr>
    <td><%=h user.id %></td>
    <td><%=h user.name %></td>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td><%=h user.state %></td>
    <td><%=h user.is_admin %></td>
    <td><%= link_to 'Show', user_path(user) %>&nbsp;
    <%# link_to 'Edit', edit_user_path(user) %>&nbsp;
    <%# link_to 'Destroy', user_path(user), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
